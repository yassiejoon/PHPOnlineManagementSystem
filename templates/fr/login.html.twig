{# empty Twig template #}
{% extends "fr/page.html.twig" %}

{% block title %} User Login {% endblock %}

{% block content %}

    {% if error %}
        <p class="errorList">La connexion a échoué essayez à nouveau.</p>
    {% endif %}

    <!-- Top content -->
    <div class="top-content">
        <div class="inner-bg">
            <div class="container">
                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 text">
                        <h1 style="font-weight: bold; color: lightskyblue">
                            Login Form
                        </h1>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-6 col-sm-offset-3 text">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Se connecter sur notre site</h3>
                                    <p>Entrez l’email et le mot de passe pour vous connecter :</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-key"></i>
                                </div>
                            </div>
                            <div class="form-bottom">
                                <form role="form" action="" method="post" class="login-form">
                                    <div class="form-group">
                                        <label class="sr-only" for="form-username">Email</label>
                                        <input type="text" name="email" placeholder="Email..." class="form-username form-control" id="form-username">
                                    </div>
                                    <div class="form-group">
                                        <label class="sr-only" for="form-password">Mot de passe</label>
                                        <input type="password" name="pass" placeholder="Password..." class="form-password form-control" id="form-password">
                                    </div>
                                    <button type="submit" class="btn">Connexion !</button>
                                </form>
                            </div>
                        </div>
                        <div class="social-login">
                            <h3>Pas encore membre ? </h3>
                            <div class="social-login-buttons">
                                <a href="/fr/register" style="text-align:center; padding: 10px 20px; font-size: 16px; border-radius: 4px; border:2px solid lightskyblue">
                                    Join Us
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

