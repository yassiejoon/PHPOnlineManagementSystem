{# empty Twig template #}
{% extends "master.html.twig" %}

{% block title %} File delete {% endblock %}

{% block content %}
    
    {% if errorList %}
    <ul class="errorList">
        {% for error in errorList %}
            <li> {{ error }} </li>
            {% endfor %}
    </ul>
    {% endif %}
    
    <p> Are you sure you want to delete this file?</p>
    <form style="display: inline-block" action="/list">
        <input type="submit" value="Cancel"></form>
    <form style="display: inline-block" method="post">
        <input type="hidden" name="delete" value="confirmed">
        <input type="submit" value="Yes, delete"></form>
    <p>
        {{f.filename}} / size(KB) : {{f.size}} / modified at {{f.modifiedDate}}
    </p>
    
 
    <a href="/list">Return</a>
{% endblock %}